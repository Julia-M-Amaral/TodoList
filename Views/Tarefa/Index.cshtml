@model List<TarefaModel>

<h2>Lista de Tarefas</h2>

@* <p>
    <a asp-action="Create">Adicionar Cliente</a>
</p> *@

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Descrição</th>
            <th>Categoria</th>
            <th>Data de Início</th>
            <th>Data Final</th>
            <th>Concluído?</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@tarefa.Id</td>
                <td>@tarefa.Descrição</td>
                <td>@tarefa.Categoria.Nome</td>
                <td>@tarefa.DataInicio</td>
                <td>@tarefa.DataConclusao</td>
                <td>@tarefa.Concluido</td>
                @*  <td>
                    <a asp-action="Details" asp-route-id="@cliente.ClienteId">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@cliente.ClienteId">Editar</a>
                    <a asp-action="Delete" asp-route-id="@cliente.ClienteId">Deletar</a>
                </td> *@
            </tr>
        }
    </tbody>
</table>