@model List<TarefaModel>
@{
    ViewData["Title"] = "Tarefas";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Tarefas</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/AFazer.css" asp-append-version="true" />
</head>
<body>

    <div class="container mt-5">
        <h2>Lista de Tarefas</h2>

        <p>
            <a asp-action="Create" class="btn btn-primary">Adicionar Tarefa</a>
        </p>


        <table class="table">
            <thead>
                <tr>
                    <th>Tarefa</th>
                    <th>Categoria</th>
                    <th>Data de Início</th>
                    <th>Data Final</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tarefa in Model)
                {
                    <tr>
                        <td>@tarefa.Descrição</td>
                        <td>@tarefa.Categoria.Nome</td>
                        <td>@tarefa.DataInicio</td>
                        <td>@tarefa.DataConclusao</td>
                        <td>
                            @if (!tarefa.Concluido)
                            {
                                <form asp-action="MarcarConcluida" asp-route-id="@tarefa.Id" method="post">
                                    <button type="submit" class="btn btn-primary button-width">Concluir</button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-success button-width" disabled>Concluída</button>
                            }
                        </td>
                        <td>
                            <div>
                                <a asp-action="Details" asp-route-id="@tarefa.Id">
                                    <span class="material-icons info-icon">
                                        info
                                    </span>
                                </a>
                                <a asp-action="Edit" asp-route-id="@tarefa.Id">
                                    <span class="material-icons edit-icon">
                                        edit
                                    </span>
                                </a>
                                <a asp-action="Delete" asp-route-id="@tarefa.Id">
                                    <span class="material-icons delete-icon">
                                        clear
                                    </span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

</body>
</html>
